{
  "expo": {
    "name": "airize",
    "slug": "airize",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "facebookScheme" : "fb447773566952295",
    "facebookAppId" : "447773566952295",
    "facebookDisplayName" : "airize",
    "scheme": "airize",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#EA6132"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone to listen for commands and record messages",
        "UIBackgroundModes" : [
          "audio"
        ]
      },
      "bundleIdentifier": "app.ios.airize",
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "app.android.airize",
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "@react-native-voice/voice",
        {
          "microphonePermision": "CUSTOM: Allow microphone use for voice command",
          "speechRecognitionPermission": "CUSTOM: Allow speech recognition "
        }
      ]
    ]
  }
}
